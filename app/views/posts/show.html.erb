<div class="post-entry col-md-12">
	<div class="col-md-8 col-md-offset-3 post-title">
		<%= @post.title %>
	</div>

	<div class="row">
		<article class="col-sm-12 col-md-7 col-md-offset-1 post-content">
			<%= sanitize @post.content %>
		</article>
		<%= render partial: 'shared/function_tips', locals: {type: "watch", watch_count: @post.watch_count} %>
	</div>
</div>