<div class="row">
  <% @posts.each do |post| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= link_to post.title, post, class: 'link_class1' %></h3>
            <p><%= truncate(post.content, length: 30) %></p>
          </div>
        </div>
      </div>
  <% end %>
</div>