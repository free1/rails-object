<div class="content-side">
  <p class="section-name">选择分类</p>
  <ul class="section-value">
    <% @categories.each do |category| %>
      <%= nav_link category.name, products_path(category: category.name), "", true %>
    <% end %>
  </ul>
</div>

<div class="content-main">
  <% @products.each do |product| %>
    <article class="trip-g">
      <%= link_to image_tag(product.cover_path_with_size), product, class: "cover" %>
      <div class="trip-c">
        <h1><%= product.title %></h1>
        <div class="trip-desc"><%= truncate(strip_tags(product.describe), length: 30) %></div>
      </div>

      <div id="collect_<%= product.id %>" class="trip-collect">
        <% if current_user && current_user.collecting?(product, "product") %>
          <%= render partial: 'member/collects/cancel_collect', locals: {product: product} %>
        <% else %>
          <%= render partial: 'member/collects/collect', locals: {product: product} %>
        <% end %>
      </div>
    </article>
  <% end %>
</div>