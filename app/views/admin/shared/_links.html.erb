<% if action_name == 'show'%>
  <%= link_to raw("返回列表"), collection_path, :class => "btn btn-primary btn-sm" %>
  <%= link_to raw("编辑"), edit_resource_path(resource), :class => "btn btn-info btn-sm" %>
  <%= link_to raw("删除"), resource_path(resource), method: :delete, data: { confirm: "确定删除?" }, :class => "btn btn-danger btn-sm" %>
<% elsif action_name == 'edit' %>
    <%= link_to raw("返回列表"), collection_path, :class => "btn btn-primary btn-sm" %>
    <%= link_to raw("查看"), resource_path(resource), :class => "btn btn-success btn-sm" %>
<% elsif action_name == 'new' %>
    <%= link_to raw("返回列表"), collection_path, :class => "btn btn-primary btn-sm" %>
<% elsif action_name == 'index' %>
    <%= link_to raw("新建"), new_resource_path, :class => "btn btn-warning btn-sm" %>
<% end %>
<span class="divider"></span>