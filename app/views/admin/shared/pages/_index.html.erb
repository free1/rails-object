<% model_name = i18n_model_name(collection) %>
<h3 class="page-header">
  <%= model_name %> 列表
  <% unless ['orders'].include?(controller_name) %>
    <%= link_to "新增#{model_name}", new_resource_path, :class => "btn btn-success" %>
  <% end %>
</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        共 <%= collection.total_entries %> 条记录
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <% display_arr.each do |elem| %>
                  <th>
                    <%= i18n_attribute_name(collection, elem) %>
                  </th>
                <% end %>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% collection.each do |resource| %>
                <%= render :partial => "admin/shared/pages/record_row", :locals => {:display_arr => display_arr, :resource => resource} %>
              <% end %>
            </tbody>
          </table>
          <%= will_paginate collection %>
        </div>
      </div>
    </div>
  </div>
</div>
