<div class="col-md-12">
  <div class="edit-registration-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        编辑<%= i18n_model_name_by_resource(resource) %>
      </h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for resource, :url => resource_path(resource), :method => :put do |f| %>
        <%= f.error_notification %>
        <%= render "admin/shared/pages/error_msg" %>
        <%= render :partial => "form", :locals => {:f => f} %>
        <%= yield :extra_content %>
        <%= f.submit "保存", :class => "btn btn-primary center-block" %>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>