<h2>创建讲座</h2>

<%= simple_form_for @chair, validate: true, html: { class: "form-horizontal"} do |f| %>
  <div class="col-sm-8 col-sm-offset-2">
    <%= f.input :title, autofocus: true %>
    <%= f.input :content, as: :text, input_html: {rows: 15} %>

    </br></br></br>
    <%= f.button :submit, "发布讲座", class: 'btn-lg btn-block', data: { disable_with: '发布中...' } %>
  </div>
<% end %>


<%= javascript_include_tag 'doc/form_text_check/autogrow' %>
<script>
    $(function () {

      // text自动增加列
      $('#chair_content').autogrow();

    });
</script>