<%= form_for @user, html: { class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, "昵称", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", id: "inputEmail3", placeholder: "name" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, "邮箱", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control", id: "inputEmail3", placeholder: "email" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, "密码", class: "col-sm-2 control-label" -%>
    <div class="col-sm-10">
      <%= f.text_field :password, class: "form-control", id: "inputpassword3", placeholder: "password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "注册", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>