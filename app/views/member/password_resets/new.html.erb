<% provide(:title, '重置密码') %>

<%= simple_form_for :session, url: password_resets_path, html: { class: "form-horizontal"} do |f| %>
  <div class="col-sm-8 col-sm-offset-2">
    <%= f.input :email, input_html: { maxlength: 50 }, autofocus: true %>

    <br/><br/>
    <%= f.button :submit, "重置密码", class: 'btn-lg btn-block', data: { disable_with: '重置链接发送中...' } %>
  </div>
<% end %>
